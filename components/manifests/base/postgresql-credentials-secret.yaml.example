# PostgreSQL credentials for shared database instance
# Copy this file to postgresql-credentials-secret.yaml and update values
#
# For local development (kind):
#   The kind overlay includes this secret with default values.
#   No action needed for 'make kind-up'.
#
# For production:
#   1. Generate a strong password
#   2. Update the values below
#   3. Apply before deploying: kubectl apply -f postgresql-credentials-secret.yaml -n ambient-code
#
apiVersion: v1
kind: Secret
metadata:
  name: postgresql-credentials
  labels:
    app: postgresql
    app.kubernetes.io/name: postgresql
type: Opaque
stringData:
  db.host: postgresql
  db.port: "5432"
  db.name: postgres
  db.user: postgres
  db.password: CHANGE_ME_IN_PRODUCTION

  # Connection strings for services (constructed from above)
  # Format: postgres://username:password@postgresql:5432/database
  # Services should use their specific database name
